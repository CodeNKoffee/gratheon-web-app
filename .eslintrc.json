{
	"env": {
		"commonjs": true,
		"node": true,
		"browser": true,
		"es6": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"globals": {},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "react-hooks"],
	"settings": {
		"react": {
			"version": "16.0.0"
			// "detect" automatically picks the version you have installed.
		}
	},
	"rules": {
		"react/display-name": "off",
		"react/jsx-no-bind": "off",
		"react/prop-types": "off"
	}
}
